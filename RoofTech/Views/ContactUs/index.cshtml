<!-- Start Header Area background -->
<div class="contact-us-page">


    <div id="inner-header">
        <img src="images/inner_banner/contactus.jpg"> <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="pages-header-content text-center">


                        <div class="breadcum">
                            <ul>
                                <li><a href="/home">Home</a></li>
                                <li><a href="contact.html">Contact Us</a></li>

                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--End Header Area background  -->
    <!-- Contact-content -->

    <section id="contact-section-form" class="section-padding">
        <div class="container">
            <div class="row contact-sec">
                <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12 padd-hor-60">
                    <form asp-action="Inquiry" asp-controller="Home" method="post" name="contactForm" class="sky-form">
                        @*<form action="/ContactUs/SendEmail" data-ajax="true" data-ajax-begin="formContactUsBegin" data-ajax-complete="formContactUsComplete" data-ajax-failure="formContactUsFailure" data-ajax-method="Post" data-ajax-success="formContactUsSuccess" method="post" novalidate="novalidate" name="contactForm" class="sky-form">*@
                            <fieldset>
                                <div class="row">
                                    <section>

                                        <label class="input">
                                            <i class="icon-append fa fa-user"></i>
                                            @Html.TextBoxFor(m => m.Name, new { placeholder = "Name*" })
                                            @Html.ValidationMessageFor(m => m.Name)
                                        </label>
                                    </section>
                                    <section>

                                        <label class="input">
                                            <i class="icon-append fa fa-envelope-o"></i>
                                            @Html.TextBoxFor(m => m.Email, new { placeholder = "Email*" })
                                            @Html.ValidationMessageFor(m => m.Email)
                                        </label>
                                    </section>

                                    <section>

                                        <label class="input">
                                            <i class="icon-append fa fa-phone"></i>
                                            @Html.TextBoxFor(m => m.Phone, new { placeholder = "Phone*" })
                                            @Html.ValidationMessageFor(m => m.Phone)
                                        </label>
                                    </section>

                                    <section>

                                        <label class="input">
                                            <i class="icon-append fa fa-comment"></i>
                                            @Html.TextAreaFor(m => m.Message, new { placeholder = "Message" })
                                            @Html.ValidationMessageFor(m => m.Message)
                                        </label>
                                    </section>
                                </div>
                            </fieldset>
                            <button type="submit" class="contact-submit-button">
                                <span>Send Message</span>
                            </button>
                        </form>

                </div>

                <div class="col-xs-12 col-sm-4 mar-b-xs mob-sec-div1 add1">
                    <div class="blog-post style2 active more-btn-white">

